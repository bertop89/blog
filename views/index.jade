extends layout
block content
    h1= title
    #articles
        - each article in articles
          div.article
            div.created_at= article.created_at
            div.title 
                a(href="/blog/"+article._id.toHexString())!= article.title
            div.body= article.body
        div.new-article
            a(href="/blog/new")!= "New Article"